<Window x:Class="Text_Editing.Text_Editor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="300" Width="385">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="20" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Height="22" Margin="0" Name="menu1" VerticalAlignment="Top">
            <MenuItem Name="File">
                <MenuItem Name="New" />
            </MenuItem>
        </Menu>
        <RichTextBox Name="text_box"  Grid.RowSpan="2" />
    </Grid>
</Window>
